<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.home.litlebot.MainActivity">

    <TextView
        android:text="@string/text_view_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="21dp"
        android:id="@+id/textViewCycle"
        android:layout_alignRight="@+id/buttonStop"
        android:layout_alignEnd="@+id/buttonStop" />

    <TextView
        android:text="@string/text_view_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCycle"
        android:layout_alignLeft="@+id/textViewCycle"
        android:layout_alignStart="@+id/textViewCycle"
        android:layout_marginTop="23dp"
        android:id="@+id/textViewClick"
        android:layout_alignRight="@+id/textViewCycle"
        android:layout_alignEnd="@+id/textViewCycle" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewClick"
        android:layout_alignLeft="@+id/textViewClick"
        android:layout_alignStart="@+id/textViewClick"
        android:layout_marginTop="15dp"
        android:id="@+id/textViewBadCycles"
        android:layout_alignRight="@+id/textViewClick"
        android:layout_alignEnd="@+id/textViewClick" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewClick"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:id="@+id/textViewResult" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewWiFiSleep"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/seekBarWiFi"
        android:layout_alignStart="@+id/seekBarWiFi" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/seekBarWiFi"
        android:max="30"
        android:layout_below="@+id/textViewWiFiSleep"
        android:layout_alignLeft="@+id/textViewCycle"
        android:layout_alignStart="@+id/textViewCycle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/toggle_button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:id="@+id/buttonStop"
        android:layout_below="@+id/seekBarWiFi"
        android:layout_toRightOf="@+id/textViewResult"
        android:layout_toEndOf="@+id/textViewResult" />

    <Button
        android:text="@string/toggle_button_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRun"
        android:layout_above="@+id/textViewCycle"
        android:layout_toLeftOf="@+id/textViewResult"
        android:layout_toStartOf="@+id/textViewResult" />

</RelativeLayout>
